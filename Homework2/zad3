<?php
	/* Зад. 3 Да се напише програма, 
	която по въведени 2 числа отпечатва 
	дали тяхното произведение е четно 
	или нечетно число. 
	Решете задачата по 2 начина.*/

	$a = 4;
	$b = 4;

	if ( ($a * $b) % 2 == 0 ) {
		echo "Positive<br/>";
	}
	else {
		echo "Negative<br/>";
	}
?>

<?php
	/* Second*/

	$a = 3;
	$b = 3;

	if ( ($a * $b) % 2 != 0 ) {
		echo "Negative";
	}
	else {
		echo "Positive";
	}
?>
